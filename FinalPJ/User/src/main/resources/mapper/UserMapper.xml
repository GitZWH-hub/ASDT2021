<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.user.mapper.UserMapper">
    <select id="findUser" parameterType="int" resultType="com.example.user.entity.User">
        select *from user where name=#{name}
    </select>
    <insert id="insertUser" parameterType="com.example.user.controller.Request.Register">
        insert into user(name, pwd) values(#{name}, #{pwd})
    </insert>
    <update id="updateUser" parameterType="com.example.user.controller.Request.ModifyPwd">
        update user set pwd=#{pwd} where name=#{id}
    </update>
</mapper>