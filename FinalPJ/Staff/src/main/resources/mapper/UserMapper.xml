<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.staff.mapper.UserMapper">
    <select id="findStaff" parameterType="com.example.staff.controller.Request.Register" resultType="com.example.staff.entity.Staff">
        select *from staff where id=#{id}
    </select>
    <insert id="insertStaff" parameterType="com.example.staff.controller.Request.Register">
        insert into staff(id, name, branch) values(#{id}, #{name}, #{branch})
    </insert>
    <select id="findAllStaff" parameterType="com.example.staff.controller.Request.BranchCount" resultType="int">
        select id from staff where branch=#{id}
    </select>
    <update id="changeBranch" parameterType="com.example.staff.controller.Request.ChangeBranch">
        update staff set branch=#{branchID} where id=#{id}
    </update>
</mapper>